<?xml version='1.0' encoding='utf-8'?>
<widget id="com.olexme.pouchdbcordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PouchDBCordova</name>
    <description>
        Examplary cordova app with pouchDB
    </description>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <engine name="android" spec="5.1.0"/>
    <engine name="ios" spec="https://github.com/apache/cordova-ios.git#4.2.0" />
    <plugin name="cordova-plugin-sqlite-2" spec="1.0.4" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
